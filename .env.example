# Instagram / Meta App Credentials
# Get these from https://developers.facebook.com
INSTAGRAM_APP_ID=your_app_id
INSTAGRAM_APP_SECRET=your_app_secret
INSTAGRAM_ACCESS_TOKEN=your_page_access_token
INSTAGRAM_ACCOUNT_ID=your_instagram_business_account_id
VERIFY_TOKEN=your_custom_webhook_verify_token

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Server
PORT=3000

# WordPress (for daily auto-posts)
# Generate an Application Password at: WordPress Admin → Users → Profile → Application Passwords
WORDPRESS_URL=https://yoursite.com
WORDPRESS_USERNAME=your_wordpress_username
WORDPRESS_APP_PASSWORD=your_application_password

# Daily post schedule (cron format, default: 10:00 AM UTC)
DAILY_POST_CRON=0 10 * * *

# Optional: Custom system prompt for ChatGPT (set via Render env vars for production)
SYSTEM_PROMPT=See render environment variables
